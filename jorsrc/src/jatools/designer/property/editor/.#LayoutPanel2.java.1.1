public class LayoutPanel2 extends JPanel {
    private TemplateComboBox hTempComb;
    private String[] hPosition = {
            "居左",
            "居中",
            "居右"
        };
    private TemplateComboBox vTempComb;
    private String[] vPosition = {
            "居上",
            "居中",
            "居下"
        };
    private TemplateTextField bottomTextField;
    private TemplateTextField rightTextField;

    /**
     * Creates a new LayoutPanel2 object.
     */
    public LayoutPanel2() {
        // TODO Auto-generated constructor stub
        hTempComb = new TemplateComboBox(hPosition);
        vTempComb = new TemplateComboBox(vPosition);
        bottomTextField = new TemplateTextField();

        rightTextField = new TemplateTextField();
        this.setLayout(new GridBagLayout());

        GridBagConstraints gbc = new GridBagConstraints();
        gbc.gridwidth = 1;
        gbc.gridheight = 1;
        gbc.insets = new Insets(10, 2, 2, 2);

        add(new JLabel("水平位置:", JLabel.LEFT), gbc);
        gbc.gridwidth = gbc.REMAINDER;
        gbc.weightx = 100;
        gbc.anchor = GridBagConstraints.WEST;
        add(hTempComb, gbc);

        gbc.weightx = 0;
        gbc.gridwidth = 1;
        gbc.gridheight = 1;
        add(new JLabel("垂直位置:", JLabel.LEFT), gbc);
        gbc.gridwidth = gbc.REMAINDER;
        add(vTempComb, gbc);
        gbc.gridwidth = 1;
        gbc.gridheight = 1;
        add(new JLabel("底    边:", JLabel.LEFT), gbc);
        gbc.gridwidth = gbc.REMAINDER;
        add(bottomTextField, gbc);

        gbc.gridwidth = 1;
        gbc.gridheight = 1;
        add(new JLabel("右    边:", JLabel.LEFT), gbc);
        gbc.gridwidth = gbc.REMAINDER;
        add(rightTextField, gbc);

        gbc.weighty = 100;
        add(Box.createVerticalGlue(), gbc);
        SwingUtil.setBorder6(this);
    }

    /**
     * @param args
     */
    public static void main(String[] args) {
        // TODO Auto-generated method stub
        try {
            UIManager.setLookAndFeel(UIManager.getSystemLookAndFeelClassName());
        } catch (Exception e) {
        }

        JFrame frame = new JFrame("布局");
        frame.setResizable(true);

        LayoutPanel2 lp = new LayoutPanel2();
        //frame.setLocation(250,250);
        frame.setSize(new Dimension(350, 250)); //new Dimension(200,100)

        Container contentPane = frame.getContentPane();

        contentPane.add(lp, BorderLayout.CENTER);
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        frame.setVisible(true);
    }
}
